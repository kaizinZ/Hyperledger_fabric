{
    "name": "db-course",
    "scripts": {
        "prepare": "husky install",
        "postinstall": "npm-run-all postinstall:*",
        "postinstall:backend": "npm run codegen -w @db-course/backend",
        "postinstall:api-client": "npm run build -w @db-course/api-client",
        "precommit": "npm-run-all --parallel precommit:*",
        "precommit:backend": "npm run precommit -w @db-course/backend",
        "precommit:webapp": "npm run precommit -w @db-course/webapp",
        "precommit:common": "npm run precommit -w common",
        "lint:common": "npm run lint -w common",
        "build:common": "npm run build -w common"
    },
    "workspaces": [
        "backend",
        "webapp",
        "common/*"
    ],
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.11.0",
        "@typescript-eslint/parser": "^5.16.0",
        "eslint": "^8.16.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsdoc": "^39.1.1",
        "eslint-plugin-unused-imports": "^2.0.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.3.7",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.6.1"
    }
}
