{
    "name": "db-course",
    "scripts": {
        "prepare": "husky install",
        "postinstall": "npm-run-all postinstall:*",
        "postinstall:backend": "npm run codegen -w @db-course/backend",
        "postinstall:api-client": "npm run build -w @db-course/api-client",
        "precommit": "",
        "precommit:backend": "",
        "precommit:webapp": "",
        "precommit:common": "",
        "lint:common": "npm run lint -w common",
        "build:common": "npm run build -w common",
        "network-up": "./chaincode-network/network/network.sh up createChannel -s couchdb -ca && ./chaincode-network/network/network.sh deployCC -ccn ledger -ccp ../chaincode-go/ -ccl go -ccep \"OR('Org1MSP.peer','Org2MSP.peer','Org3MSP.peer','Org4MSP.peer','Org5MSP.peer')\"",
        "network-down": "./chaincode-network/network/network.sh down"
    },
    "workspaces": [
        "backend",
        "webapp",
        "common/*"
    ],
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.11.0",
        "@typescript-eslint/parser": "^5.16.0",
        "eslint": "^8.16.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsdoc": "^39.1.1",
        "eslint-plugin-unused-imports": "^2.0.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.3.7",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.6.1"
    }
}
