{
    "name": "@db-course/backend",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "private": true,
    "scripts": {
        "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes -c tsoa-config.json\";",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint --fix './{src,mysql-migration}/**/*.{js,ts}' && prettier --write './{src,mysql-migration}/**/*.{js,ts}'",
        "codegen": "npm-run-all --parallel codegen:*",
        "codegen:tsoa": "tsoa spec-and-routes -c tsoa-config.json",
        "precommit": "lint-staged --no-stash",
        "build": "npm run build:compile; npm run build:bundle",
        "build:compile": "tsc --build",
        "build:bundle": "esbuild dist/src/index.js --bundle --outfile=build/index.js --platform=node",
        "start": "npx node build/index.js tsoa routes -c tsoa-config.json"
    },
    "repository": {
        "type": "git",
        "url": ""
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@types/cors": "^2.8.10",
        "cors": "^2.8.5",
        "esbuild": "^0.12.15",
        "express": "^4.17.1",
        "inversify": "^6.0.1",
        "inversify-binding-decorators": "^4.0.0",
        "swagger-ui-express": "^4.1.6",
        "tsoa": "^3.14.1",
        "typescript-json-schema": "^0.53.1",
        "uuid": "^8.3.2",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@types/express": "^4.17.12",
        "@types/jsonwebtoken": "^8.5.5",
        "@types/jwk-to-pem": "^2.0.1",
        "@types/swagger-ui-express": "^4.1.2",
        "concurrently": "^6.2.0",
        "install": "^0.13.0",
        "nodemon": "^2.0.7",
        "ts-jest": "^27.1.4",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "^3.12.0",
        "typescript": "^4.3.2"
    },
    "lint-staged": {
        "**/*.ts": [
            "npm run lint:fix"
        ]
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "^.+\\.(ts|js)$": [
                "esbuild-jest",
                {
                    "sourcemap": true
                }
            ]
        },
        "globals": {
            "ts-jest": {
                "tsconfig": "tsconfig.json"
            }
        }
    },
    "babel": {
        "presets": [
            "@babel/preset-typescript"
        ]
    }
}
